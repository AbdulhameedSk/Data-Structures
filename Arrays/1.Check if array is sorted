
class Solution {
    boolean arraySortedOrNot(int[] arr, int n) {
        // code here
        boolean c=true;
        for(int i=0;i<n-1;i++){
            if(arr[i]>arr[i+1]){
                c=false;
                break;
            }
           
        }
        
        return c;
        
        
    }
}

//Check if Array Is Sorted and Rotated
class Solution {
    public boolean check(int[] nums) {
        int cnt=0;
       for(int i=0;i<nums.length;i++)
       {
           if(nums[i] > nums[(i+1) % nums.length])
           {
               cnt++;
           }
           if(cnt>1)
            return false;
       }
       return true; 
    }
}
